<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#303030"
    android:paddingHorizontal="30dp"
    >

    <ImageView
        android:layout_width="278dp"
        android:layout_height="49dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="52dp"
        android:id="@+id/ldb"
        android:src="@drawable/ic_leaderboard_head" />

    <LinearLayout
        android:id="@+id/headtop"
        android:layout_width="366dp"
        android:layout_height="40dp"
        android:layout_below="@+id/ldb"
        android:layout_marginTop="15dp"
        android:background="@drawable/ic_rectangle_purple"
        android:paddingEnd="16dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingStart="16dp">

        <TextView
            android:id="@+id/position"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_gravity="center_vertical"

            android:fontFamily="sans-serif-medium"
            android:gravity="center"
            android:text="Pos"
            android:textColor="@android:color/black"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="Name"
                android:textColor="@color/colorBlack"
                android:textSize="16sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/pointss"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:text="Points"
                android:textColor="@color/colorBlack"
                android:textSize="16sp" />

        </LinearLayout>

    </LinearLayout>

    <ListView
        android:id="@+id/list"
        android:layout_width="368dp"
        android:layout_height="440dp"
        android:layout_alignParentBottom="true"
        android:layout_alignTop="@+id/headtop"
        android:layout_marginBottom="172dp"
        android:layout_marginTop="90dp"
        android:divider="@null"
        android:dividerHeight="3dp"
        android:orientation="vertical"
        android:paddingVertical="30dp" />

    <LinearLayout
        android:layout_width="366dp"
        android:layout_height="40dp"
        android:layout_below="@+id/list"
        android:layout_marginTop="66dp"
        android:background="@drawable/ic_rectangle_purple"
        android:paddingEnd="16dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingStart="16dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/userrname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="Name"
                android:textColor="@color/colorBlack"
                android:textSize="16sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/userpoints"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:text="Points"
                android:textColor="@color/colorBlack"
                android:textSize="16sp" />

        </LinearLayout>

        <TextView
            android:id="@+id/userposition"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_gravity="center_vertical"

            android:fontFamily="sans-serif-medium"
            android:gravity="center"
            android:text="Pos"
            android:textColor="@android:color/black"
            android:textSize="16sp" />

    </LinearLayout>
</RelativeLayout>