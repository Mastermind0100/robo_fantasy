<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#303030"
    android:paddingHorizontal="30dp"
    >

    <ImageView
        android:id="@+id/ldb"
        android:layout_width="230dp"
        android:layout_height="42dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="52dp"
        android:src="@drawable/ic_matches_header" />
    <LinearLayout
        android:id="@+id/headtop"
        android:layout_width="366dp"
        android:layout_height="40dp"
        android:layout_below="@+id/ldb"
        android:layout_marginTop="15dp"
        android:background="@drawable/ic_rectangle_purple"
        android:paddingEnd="16dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingStart="16dp">

        <TextView
            android:id="@+id/position"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_gravity="center_vertical"

            android:fontFamily="sans-serif-medium"
            android:gravity="center"
            android:text="No."
            android:textColor="@android:color/black"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="Matches"
                android:textColor="@color/colorBlack"
                android:textSize="16sp" />

        </LinearLayout>

        </LinearLayout>


    <ListView
        android:id="@+id/list_matches"
        android:layout_width="wrap_content"
        android:layout_height="490dp"
        android:layout_alignTop="@+id/headtop"
        android:layout_below="@id/headtop"
        android:layout_marginTop="45dp"
        android:divider="@null"
        android:dividerHeight="3dp"
        android:orientation="vertical"
        android:paddingVertical="30dp" />

    <Button
        android:id="@+id/click"
        android:layout_width="366dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="30dp"
        android:layout_marginHorizontal="30dp"

        android:background="@drawable/ic_rectangle_purple"
        android:text="Place bet"
        android:textColor="@color/colorWhite" />


</RelativeLayout>